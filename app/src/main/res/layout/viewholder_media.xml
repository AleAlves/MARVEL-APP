<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_details_constraintlayout_item"
    android:layout_width="@dimen/size_200dp"
    android:layout_height="@dimen/size_250dp"
    android:layout_margin="@dimen/size_8dp"
    android:background="@drawable/card_itemview_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/character_details_textview_name"
        style="@style/textBold12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_8dp"
        android:gravity="center"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/character_details_imageview_image"
        android:layout_width="@dimen/size_124dp"
        android:layout_height="@dimen/size_175dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>