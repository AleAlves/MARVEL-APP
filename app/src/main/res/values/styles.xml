<resources>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorPrimaryDark</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@drawable/tablayout_background</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="toolbar">
        <item name="android:textSize">12sp</item>
        <item name="titleTextColor">@color/font_light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CardTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TagThemeSelected">
        <item name="android:state_selected">true</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="TagThemeUnselected">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_light</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="textBold26">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBold20">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBold16">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBold12">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textNormal12">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

    <style name="textNormalRed12">
        <item name="android:textColor">@color/font_dark</item>
        <item name="android:textSize">@dimen/font_16sp</item>
    </style>

</resources>
